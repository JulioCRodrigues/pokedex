<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="530dp"
    android:layout_margin="16dp"
    android:elevation="2dp"
    app:cardCornerRadius="16dp"
    android:background="@drawable/border_card">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="541dp"
        android:layout_height="595dp">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:contentDescription="Pokemon Image"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="89dp"
            tools:srcCompat="@drawable/bulbatest" />

        <TextView
            android:id="@+id/tvId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Numero de identificação"
            android:text="N° 001"
            android:textColor="#313131"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="42dp" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pokemon"
            android:textColor="#313131"
            android:textSize="34dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="96dp"
            tools:layout_editor_absoluteY="406dp" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="69dp"
            tools:layout_editor_absoluteY="471dp">

            <TextView
                android:id="@+id/tvAtributes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_atribute"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="Pokemon Att"
                android:textAlignment="center"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvAtributes2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/background_atribute"
                android:padding="10dp"
                android:text="Pokemon Att"
                android:textAlignment="center"
                android:textColor="@color/black" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>